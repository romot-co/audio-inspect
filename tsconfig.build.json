{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "incremental": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "test/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
} 